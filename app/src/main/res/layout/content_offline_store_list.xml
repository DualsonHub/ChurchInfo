<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:padding="2dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/button_top_style_1"
        >
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/store_logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="@drawable/event"/>


        <TextView
            android:layout_toRightOf="@+id/store_logo"
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Boldoz Books"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="17sp" />

        <TextView
            android:layout_toRightOf="@+id/store_logo"
            android:layout_below="@+id/store_name"
            android:id="@+id/stores_moto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Home of Quantity Books"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="13sp" />

                               <TextView
                                   android:layout_toRightOf="@+id/store_logo"
                                   android:layout_below="@+id/stores_moto"
                                   android:id="@+id/check"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:gravity="center_horizontal"
                                   android:text="Check it here."

                                   android:layout_marginTop="5dp"
                                   android:layout_marginLeft="10dp"
                                   android:textSize="13sp" />








    </RelativeLayout>

</RelativeLayout>